<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    tools:context=".fragment.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_img_profile"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            app:cardCornerRadius="@dimen/dimen_50">
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_toRightOf="@id/card_img_profile"
            android:text="@string/full_name"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_10"
        android:text="@string/utilities"/>


    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/btn_term_of_use"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_use"
                android:textSize="@dimen/text_size_18"
                android:padding="@dimen/dimen_5"/>

            <ImageView
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/chevron_right" />
        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_30"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorAccent"/>
        <RelativeLayout
            android:id="@+id/btn_policy"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/policy"
                android:textSize="@dimen/text_size_18"
                android:padding="@dimen/dimen_5"/>
            <ImageView
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/chevron_right" />
        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_30"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorAccent"/>
        <RelativeLayout
            android:id="@+id/btn_contact"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textSize="@dimen/text_size_18"
                android:padding="@dimen/dimen_5"/>
            <ImageView
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/chevron_right" />
        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_30"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorAccent"/>
        <RelativeLayout
            android:id="@+id/btn_feedback"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textSize="@dimen/text_size_18"
                android:padding="@dimen/dimen_5"/>
            <ImageView
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/chevron_right" />
        </RelativeLayout>
        <View
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_30"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorAccent"/>
        <RelativeLayout
            android:id="@+id/btn_change_password"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_5"
                android:text="@string/change_password"
                android:textSize="@dimen/text_size_18" />
            <ImageView
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/chevron_right" />
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="@dimen/dimen_30"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_sign_out"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
           android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:textSize="@dimen/text_size_18"
            android:padding="@dimen/dimen_5"/>
    </RelativeLayout>

</RelativeLayout>